diff --git a/core/arch/arm/plat-imx/conf.mk b/core/arch/arm/plat-imx/conf.mk
index 1d5081f96..674d6d34b 100644
--- a/core/arch/arm/plat-imx/conf.mk
+++ b/core/arch/arm/plat-imx/conf.mk
@@ -60,7 +60,8 @@ mx7ulp-flavorlist = \
 	mx7ulpevk
 
 mx8mq-flavorlist = \
-	mx8mqevk
+	mx8mqevk \
+	mx8mqrom5720a1
 
 mx8mm-flavorlist = \
 	mx8mmevk \
@@ -371,6 +372,11 @@ CFG_DDR_SIZE ?= 0x10000000
 CFG_UART_BASE ?= UART7_BASE
 endif
 
+ifneq (,$(filter $(PLATFORM_FLAVOR),mx8mqrom5720a1))
